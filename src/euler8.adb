pragma Ada_2022;

with Ada.Text_IO;

procedure Euler8 is
   Input : String := "";
   WindowLen : constant Integer := 13;
   Window : String(1..WindowLen);
   Largest : Long_Integer := 0;
   Product : Long_Integer := 1;
begin
   for I in 1..(Input'Length - WindowLen) loop
      Window := Input(I .. (I + WindowLen - 1));
      Product := 1;
      for J in 1..WindowLen loop
         Product := Product * Long_Integer'Value(( 1 => Window(J)));
      end loop;
      if Product > Largest then
         Largest := Product;
      end if;
   end loop;
   Ada.Text_IO.Put_Line("Answer =" & Largest'Image);
end Euler8;
